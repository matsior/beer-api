<config xmlns='http://www.ehcache.org/v3'
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation="http://www.ehcache.org/v3
https://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="default">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache-template>

    <cache alias="Basic" uses-template="default"/>

    <cache alias="Beers" uses-template="default"/>
    <cache alias="BeerStyles" uses-template="default"/>
    <cache alias="Producers" uses-template="default"/>
    <cache alias="Users" uses-template="default"/>
</config>
